@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Panier";
}

@model stripe_simple_example_app.Models.Cart


<div class="card">
    <div class="card-header">
        <h3>Panier</h3>
    </div>
    <div class="card-body">
        <form asp-action="Cart">

            <div class="form-group">
                <label class="form-label" asp-for="Name">Nom du client</label>
                <input class="form-control" type="text" asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Sélectionner</th>
                        <th scope="col">ID</th>
                        <th scope="col">Titre</th>
                        <th scope="col">Prix unitaire</th>
                        <th scope="col">Quantité</th>
                    </tr>
                </thead>

                <tbody>
                    @for (int idx = 0; idx < Model.Items.Count(); idx++)
                    {
                        <tr>
                            <td><input class="form-check-input" type="checkbox" asp-for="@Model.Items[idx].IsSelected" /></td>
                            <td>@Model.Items[idx].Id <input type="hidden" asp-for="@Model.Items[idx].Id" value="@Model.Items[idx].Id" /></td>
                            <td>@Model.Items[idx].Title <input type="hidden" asp-for="@Model.Items[idx].Title" value="@Model.Items[idx].Title" /></td>
                            <td>@Model.Items[idx].Price <input type="hidden" asp-for="@Model.Items[idx].Price" value="@Model.Items[idx].Price" /></td>
                            <td><input class="form-control" type="number" asp-for="@Model.Items[idx].Quantity" min="0" /></td>
                        </tr>
                    }
                </tbody>
            </table>

            <button type="submit" class="btn btn-primary"><i class="fa-solid fa-cart-shopping"></i> Suivant</button>

        </form>
    </div>
</div>