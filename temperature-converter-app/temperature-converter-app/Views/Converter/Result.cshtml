@{
    Layout = "_Layout";
    ViewBag.Title = "Résultat";
}

@model temperature_converter_app.Models.Conversion

<div class="jumbotron">
    <h1>Page de résultat</h1>
    <div class="lead">
        En convertissant
        <span class="badge badge-secondary">
            @Model.InputValue °@Model.InputMetric
        </span>
        , on obtient
        <span class="badge badge-success">
            @Model.OutputValue °@Model.OutputMetric
        </span>
    </div>
    <hr />
    <a class="btn btn-primary" href="/Converter/Convert" role="button">Retour</a>
</div>