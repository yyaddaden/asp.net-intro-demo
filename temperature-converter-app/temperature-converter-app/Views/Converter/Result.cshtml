@{
    Layout = "_Layout";
    ViewBag.Title = "Résultat";
}

@using temperature_converter_app.Models
@model Conversion

<div class="container-fluid bg-light p-5 container-sm">
    <h1 class="mb-3">Page de résultat</h1>

    <div class="lead">
        En convertissant
        <span class="badge bg-primary">
            @Model.InputValue °@Model.InputMetric
        </span>
        , on obtient
        <span class="badge bg-success">
            @String.Format("{0:0.00}", @Model.OutputValue) °@Model.OutputMetric
        </span>
    </div>
    <hr />
    <a class="btn btn-primary" href="/Converter/Convert" role="button">Retour</a>
</div>