@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Chercher";
}

@model seance_04_exercice_01.Models.Book

<form asp-action="Result">
    <div class="container">
        <div class="row">
            <div class="col"><input asp-for="Title" type="text" class="form-control" placeholder="Titre ..." /></div>
