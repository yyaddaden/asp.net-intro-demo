@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.Title = "Résultats";
}

@model List<seance_04_exercice_01.Models.Book>

@if (Model.Count > 0)
{
    @foreach (seance_04_exercice_01.Models.Book book in Model)
    {
        <partial name="_Book" model=book />
    }
}
else
{
    <div class="alert alert-danger" role="alert">
        Aucune correspondance n'a été trouvée !
    </div>
}

<a href="~/Home/Search" class="btn btn-primary" role="button"><i class="bi bi-box-arrow-left"></i> Retour</a>