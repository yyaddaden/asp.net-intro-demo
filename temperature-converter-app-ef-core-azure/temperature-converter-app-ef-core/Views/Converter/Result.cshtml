@{
    Layout = "_Layout";
    ViewBag.Title = "Résultat";
}

@using temperature_converter_app_ef_core.Models;
@model Conversion

<div class="jumbotron">
    <h1>Page de résultat</h1>
    <br />

    <div class="lead">
        En convertissant
        <span class="badge badge-secondary">
            @Model.InputValue °@Model.InputMetric
        </span>
        , on obtient
        <span class="badge badge-success">
            @String.Format("{0:0.00}", @Model.OutputValue) °@Model.OutputMetric
        </span>
    </div>
    <hr />
    <a class="btn btn-success" href="/Converter/History?userId=@Model.UserId" role="button">Historique</a>
    <a class="btn btn-primary" href="/Converter/ConvertOrAddUser" role="button">Retour</a>
</div>